{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "lib",
    "rootDir": "./src",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules",
    "types",
    "lib",
    "scripts"
  ]
}
